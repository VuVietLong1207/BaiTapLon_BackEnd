@model PersonalBlog.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    @* Căn giữa và tạo khoảng cách trên *@
    <div class="col-md-6 col-lg-4">
        @* Giới hạn chiều rộng của form *@
        <div class="card shadow-sm">
            @* Thêm đổ bóng cho card *@
            <div class="card-body p-4">
                @* Padding bên trong card *@
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2> @* Tiêu đề căn giữa *@
                <section>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div> @* Khoảng cách dưới cho lỗi *@
                        <div class="form-floating mb-3">
                            @* Sử dụng form-floating cho input *@
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword">Confirm password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            @* Nút full chiều rộng *@
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                        <hr class="my-4" /> @* Đường kẻ phân cách *@
                        <p class="text-center">
                            Bạn đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập ngay</a> @* Liên kết đến trang đăng nhập *@
                        </p>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}